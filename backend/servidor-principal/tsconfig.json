{
  "compilerOptions": {
    "target": "ES2020", // isso define a versão do JavaScript que o TypeScript irá compilar para
    "module": "commonjs", // isso define o sistema de módulos que o TypeScript irá usar
    "lib": ["ES2020", "DOM"], // isso inclui as definições de tipo da biblioteca padrão do ES2020 e DOM
    "outDir": "./dist", // isso define o diretório de saída para os arquivos JavaScript compilados
    "rootDir": ".", // isso define o diretório raiz que contém os arquivos de origem TypeScript
    "strict": true, // isso ativa todas as opções de verificação de tipo estritas
    "esModuleInterop": true, // isso permite a interoperabilidade entre módulos ES e CommonJS
    "allowSyntheticDefaultImports": true, // isso permite importar módulos com export default
    "skipLibCheck": true, // isso pula a verificação de tipo dos arquivos de declaração (.d.ts) para acelerar a compilação
    "forceConsistentCasingInFileNames": true, // isso garante que o uso de maiúsculas e minúsculas nos nomes de arquivos seja consistente
    "resolveJsonModule": true, // isso permite importar arquivos JSON como móduloss
    "declaration": true, // isso gera arquivos de declaração (.d.ts) para os arquivos TypeScript compilados
    "declarationMap": true, // isso gera mapas de declaração para facilitar a depuração
    "sourceMap": true, // isso gera arquivos de mapa de origem para facilitar a depuração
    "types": ["jest", "node"] // isso inclui os tipos do Jest e Node.js para reconhecer describe, it, expect, etc.
  },
  "include": ["src", "tests/**/*"], // inclui arquivos de src e todos os arquivos de teste
  "exclude": ["node_modules", "dist", "testes"] // exclui essas pastas da compilação
}
